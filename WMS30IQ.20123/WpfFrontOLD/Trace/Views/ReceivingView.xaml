<WMCore:UserControlBase x:Uid="ReceivingModule" x:Class="WpfFront.Views.ReceivingView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:xcdg="http://schemas.xceed.com/wpf/xaml/datagrid"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:aw="clr-namespace:Assergs.Windows;assembly=Assergs.Windows"
    xmlns:odc="clr-namespace:Odyssey.Controls;assembly=Odyssey"
    HorizontalAlignment="Stretch" Margin="0"
    VerticalAlignment="Stretch"  Width="Auto" Height="Auto"
    xmlns:WMCore="clr-namespace:Core.WPF;assembly=Core"  
    xmlns:toolkit="http://schemas.microsoft.com/wpf/2008/toolkit"
    xmlns:uc="clr-namespace:WpfFront.Common.UserControls"
    x:Name="ReceivingModule">

    <WMCore:UserControlBase.Resources>
        <xcdg:DataGridCollectionViewSource x:Uid="xcdg:DataGridCollectionViewSource_1" x:Key="ListDoc" Source="{Binding DocumentList}" AutoFilterMode="And"  DefaultCalculateDistinctValues="True" />
    </WMCore:UserControlBase.Resources>

    <DockPanel x:Uid="DockPanel_1" Background="{DynamicResource WBg}" HorizontalAlignment="Stretch" VerticalAlignment="Stretch">

                <DockPanel.Resources>
                    <WMCore:ForceReReadConverter x:Uid="WMCore:ForceReReadConverter_1" x:Key="forceReReadConverter" />
                    <WMCore:FormattingConverter x:Uid="WMCore:FormattingConverter_1" x:Key="formattingConverter" />
                    <WMCore:FormNotificationErrorMessageConverter x:Uid="WMCore:FormNotificationErrorMessageConverter_1" x:Key="formNotificationErrorMessageConverter" />
                    <WMCore:NullableIntegerFormatConverter x:Uid="WMCore:NullableIntegerFormatConverter_1" x:Key="nullableIntegerFormatConverter" />
                </DockPanel.Resources>

                <!-- COLUMN ONE -->

                <!-- PANEL DE LISTA DE DOCUMENTOS -->


        <DockPanel x:Uid="DockPanel_2" Margin="0,0,0,0"  VerticalAlignment="Stretch" DockPanel.Dock="Left" HorizontalAlignment="Stretch" Height="Auto">

            <StackPanel x:Uid="StackPanel_1" Orientation="Horizontal" HorizontalAlignment="Stretch" Margin="5,0,5,0" DockPanel.Dock="Top">
                <TextBlock x:Uid="txtTitle" Name="txtTitle" Margin="4,3,4,2" Width="300" FontSize="14" FontWeight="Bold" HorizontalAlignment="Center" TextAlignment="Center" Text="{StaticResource RECEIVING_PROCESS}"></TextBlock>
                <TextBlock x:Uid="txtHide" Margin="6,0,0,0" Name="txtHide" FontWeight="Bold" VerticalAlignment="Center" HorizontalAlignment="Right" MouseDown="TextBlock_MouseDown" Text="{StaticResource HIDE_LIST}" ><TextBlock.TextDecorations><TextDecoration x:Uid="TextDecoration_1" PenOffset="1" /></TextBlock.TextDecorations></TextBlock>
            </StackPanel>


            <DockPanel  x:Uid="stpDocLis" Name="stpDocLis">
            <!-- Botoom -->
            <GroupBox x:Uid="gb1" Header="{StaticResource CRE_REC_WIT_PO_SEL_VEN}" Name="gb1"
                          DockPanel.Dock="Bottom" Margin="5,4,8,0" FontWeight="Normal">

                <Grid x:Uid="Grid_1" Margin="3">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition x:Uid="ColumnDefinition_1"/>
                        <ColumnDefinition x:Uid="ColumnDefinition_2"/>
                    </Grid.ColumnDefinitions>

                    <StackPanel x:Uid="StackPanel_2" Grid.Column="0" Orientation="Vertical">
                        <StackPanel x:Uid="StackPanel_3" Orientation="Vertical" Margin="0,0,0,0">
                            <TextBlock  x:Uid="TextBlock_1" Margin="0,4,5,0" Text="{StaticResource SEARCH_VENDOR}"></TextBlock>
                            <uc:SearchAccount x:Uid="txtVendor" x:Name="txtVendor" Margin="0,2,0,0" AccType="2" />
                        </StackPanel>
                    </StackPanel>

                    <Button x:Uid="btnEmptyTask" MinHeight="40" Width="120" VerticalAlignment="Bottom" Margin="5,0,0,0" Grid.Column="1"  ToolTip="Create a blanket receipt document."
                                       x:Name="btnEmptyTask"  Click="btnEmptyTask_Click" IsEnabled="true">
                        <TextBlock x:Uid="TextBlock_2" TextWrapping="Wrap" HorizontalAlignment="Center" TextAlignment="Center" FontWeight="Bold" Text="{StaticResource CREATE_REC_TASK_WO_PO}" ></TextBlock>
                    </Button>
                </Grid>

            </GroupBox>
            <!-- Botoom -->


            <Border x:Uid="Border_1" Style="{DynamicResource UserControlFormInnerBorder}" HorizontalAlignment="Stretch"  VerticalAlignment="Stretch">

                    <DockPanel x:Uid="dpList" VerticalAlignment="Stretch" Name="dpList" Height="Auto">


                        <StackPanel x:Uid="StackPanel_4" Orientation="Horizontal" DockPanel.Dock="Top">
                            <TextBlock x:Uid="TextBlock_3" VerticalAlignment="Center" Text="{StaticResource SEARCH_DOCUMENT}"></TextBlock>
                            <TextBox x:Uid="txtSearch" Width="100" x:Name="txtSearch" Margin="4,2,0,4" ToolTip="Enter keyword to search." TextChanged="txtSearch_TextChanged" />
                            <CheckBox x:Uid="chkLate" HorizontalAlignment="Stretch" x:Name="chkLate" Margin="30,9,0,4" Width="Auto"  VerticalContentAlignment="Center" Checked="chkLate_Checked" Unchecked="chkLate_Checked" Content="{StaticResource LATE_DOCUMENTS}"></CheckBox>

                            <Image x:Uid="Image_1" Margin="10,0,0,0" Width="17" HorizontalAlignment="Center" Source="/WpfFront;component/Images/refresh.png" MouseDown="Image_MouseDown" ToolTip="Refresh List" />

                        </StackPanel>

                    <Grid  x:Uid="Grid_2" VerticalAlignment="Stretch" Height="Auto">
                        <xcdg:DataGridControl  x:Uid="dgDocument" x:Name="dgDocument" ItemsSource="{Binding Source={StaticResource ListDoc}}" 
                                          AutoCreateColumns="False" ReadOnly="False" 
                                          SelectionMode="Single" NavigationBehavior="RowOnly" GotFocus="dgDocument_Click"
                                            ItemScrollingBehavior="Immediate" VerticalAlignment="Top" >

                            <xcdg:DataGridControl.Resources>

                                <Style x:Uid="Style_1" TargetType="{x:Type xcdg:DataRow}">
                                    <Style.Triggers>
                                        <DataTrigger x:Uid="DataTrigger_1" Binding="{Binding Path=DocStatus.Name}"  Value="Completed">
                                            <Setter x:Uid="Setter_1" Property="Background" Value="#FCA2A2"/>
                                        </DataTrigger>

                                        <DataTrigger x:Uid="DataTrigger_2" Binding="{Binding Path=DocStatus.Name}"  Value="In Process">
                                            <Setter x:Uid="Setter_2" Property="Background" Value="#FCFE70"/>
                                        </DataTrigger>

                                    </Style.Triggers>
                                </Style>


                                <Style x:Uid="Style_2" x:Key="{x:Type xcdg:ScrollTip}" TargetType="{x:Type xcdg:ScrollTip}">
                                    <Setter x:Uid="Setter_3" Property="HorizontalAlignment" Value="Right" />
                                    <Setter x:Uid="Setter_4" Property="VerticalAlignment" Value="Bottom" />
                                </Style>
                            </xcdg:DataGridControl.Resources>

                            <xcdg:DataGridControl.ContextMenu>
                                <ContextMenu x:Uid="ctnColsMenu" Name="ctnColsMenu">
                                    <MenuItem x:Uid="MenuItem_1" Header="Show/Hide Columns" Tag="CustomizeColumns" MouseEnter="MenuItem_MouseEnter"/>
                                </ContextMenu>
                            </xcdg:DataGridControl.ContextMenu>


                            <xcdg:DataGridControl.Columns>
                                <!--<xcdg:Column x:Uid="xcdg:Column_1" FieldName="Priority" Title="Prio" Width="25" />-->
                                <xcdg:Column x:Uid="xcdg:Column_2" FieldName="DocNumber" IsMainColumn="True" Title="{StaticResource DOCUMENT}" Width="80" ReadOnly="True"  />
                                <xcdg:Column x:Uid="xcdg:Column_3" FieldName="Vendor.Name" Title="{StaticResource VENDOR}"  Width="120" TextWrapping="Wrap" ReadOnly="True"  />
                                <xcdg:Column x:Uid="xcdg:Column_4" FieldName="Date1" Title="{StaticResource ORDER_DATE}"  Width="65" ReadOnly="True" />
                                <xcdg:Column x:Uid="xcdg:Column_5" FieldName="DocStatus.Name" Title="{StaticResource STATUS}" Width="55"  ReadOnly="True" />
                                <!--<xcdg:Column FieldName="Arrived" Title="Arrived" Visible="False" Width="45" ReadOnly="True"/>-->
                                <xcdg:Column  FieldName="Date5" Title="Arrived On" Width="65" Visible="False"  ReadOnly="True" />
                                
                                <xcdg:Column x:Uid="xcdg:Column_6" FieldName="Date2" Title="Required On" Visible="False"  Width="65" ReadOnly="True" />
                                <xcdg:Column x:Uid="xcdg:Column_7" FieldName="Date3" Title="Promised On" Width="65" Visible="False"  ReadOnly="True" />
                                <xcdg:Column x:Uid="xcdg:Column_8" FieldName="DocType.Name" Title="Type" Width="60" Visible="False"  ReadOnly="True" />
                                <xcdg:Column x:Uid="xcdg:Column_9" FieldName="Reference" Title="Reference" Width="60" Visible="False"  ReadOnly="True" />
                                <xcdg:Column x:Uid="xcdg:Column_10" FieldName="Comment" Title="Comment" Width="70" Visible="False"  ReadOnly="True" TextWrapping="Wrap" />
                                <xcdg:Column x:Uid="xcdg:Column_11" FieldName="AssignedUsers" Title="Pickers" Width="70" Visible="False"  TextWrapping="Wrap" ReadOnly="True" />
                                
                                
                               </xcdg:DataGridControl.Columns>
                            <xcdg:DataGridControl.View>
                                <xcdg:TableView x:Uid="xcdg:TableView_1" UseDefaultHeadersFooters="False"
                                                ShowScrollTip="True" VerticalGridLineBrush="LightGray" ShowRowSelectorPane="False" HorizontalGridLineThickness="1" HorizontalGridLineBrush="LightGray">
                                    <xcdg:TableView.Theme>
                                        <xcdg:Office2007BlackTheme x:Uid="xcdg:Office2007BlackTheme_1"/>
                                    </xcdg:TableView.Theme>
                                    <xcdg:TableView.FixedHeaders>
                                        <DataTemplate x:Uid="DataTemplate_1">
                                            <xcdg:HierarchicalGroupByControl x:Uid="xcdg:HierarchicalGroupByControl_1" xcdg:TableView.CanScrollHorizontally="False" />
                                        </DataTemplate>
                                        <DataTemplate x:Uid="DataTemplate_2">
                                            <xcdg:ColumnManagerRow x:Uid="xcdg:ColumnManagerRow_6" AllowAutoFilter="True" AllowColumnReorder="True" />
                                        </DataTemplate>
                                    </xcdg:TableView.FixedHeaders>
                                </xcdg:TableView>
                            </xcdg:DataGridControl.View>
                        </xcdg:DataGridControl>
                    </Grid>

                </DockPanel>
                </Border>

           </DockPanel>

        </DockPanel>



        <TabControl x:Uid="tabMenu" Margin="2,5,5,0" Name="tabMenu" DockPanel.Dock="Top"
                        Style="{DynamicResource TabControlStyle}" Visibility="Hidden" HorizontalAlignment="Stretch"
                        VerticalAlignment="Stretch">

                <TabItem x:Uid="TabItem_1" Header="{StaticResource DOC_DET_RECE_CREA}">

                    <StackPanel x:Uid="StackPanel_5" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Margin="3">


                        <Border  x:Uid="Border_2" Style="{DynamicResource UserControlFormInnerBorder}" DockPanel.Dock="Bottom" 
                    HorizontalAlignment="Stretch"  VerticalAlignment="Stretch" >

                            <StackPanel x:Uid="StackPanel_6">
                                <StackPanel x:Uid="StackPanel_7" Orientation="Horizontal" Margin="2">
                                    <StackPanel x:Uid="StackPanel_8" Orientation="Vertical">

                                        <StackPanel x:Uid="StackPanel_9" Orientation="Horizontal">
                                            <TextBlock x:Uid="TextBlock_4" FontWeight="Bold" Text="{StaticResource CURRENT_DOCUMENT}"></TextBlock>

                                            <TextBlock x:Uid="TextBlock_5" FontWeight="Bold" Margin="5,0,0,0" Text="{Binding Path=Document.DocNumber}" Foreground="Brown"></TextBlock>
                                        </StackPanel>

                                        <ListView x:Uid="lvDocumentData" ItemsSource="{Binding Path=DocumentData}"  Name="lvDocumentData" MaxHeight="100" MaxWidth="250"  >
                                            <ListView.View>
                                                <GridView x:Uid="GridView_1" ColumnHeaderContainerStyle="{DynamicResource CustomHeaderStyle}">
                                                    <GridViewColumn x:Uid="GridViewColumn_1" Header="{StaticResource KEY}" DisplayMemberBinding="{Binding Path=DataKey}"></GridViewColumn>

                                                    <GridViewColumn x:Uid="GridViewColumn_2" Header="{StaticResource VALUE}" Width="120" >
                                                        <GridViewColumn.CellTemplate>
                                                            <DataTemplate x:Uid="DataTemplate_3">
                                                                <TextBlock x:Uid="TextBlock_6" Text="{Binding Path=DataValue}" TextWrapping="Wrap" />
                                                            </DataTemplate>
                                                        </GridViewColumn.CellTemplate>
                                                    </GridViewColumn>

                                                </GridView>
                                            </ListView.View>
                                        </ListView>
                                    </StackPanel>

                                    <StackPanel x:Uid="StackPanel_10" Margin="10,0,0,0">

                                        <WrapPanel x:Uid="WrapPanel_1" Margin="0,0,5,0">

                                        <Image x:Uid="Image_1" Margin="0,0,4,0" Width="20" HorizontalAlignment="Center" 
                                               Source="/WpfFront;component/Images/Icons/Cross.png" Name="xRefresh"
                                               MouseDown="xRefresh_MouseDown" ToolTip="Refresh Document" />

                                        <Button x:Uid="btnRecTkt" HorizontalAlignment="Left" Name="btnRecTkt" MinHeight="30" 
                                            Margin="0,0,6,0" Click="btnRecTkt_Click">
                                                <StackPanel x:Uid="StackPanel_11" Orientation="Horizontal">
                                                    <Image x:Uid="Image_2" Margin="5,0,0,0"  Width="18" Source="/WpfFront;component/Images/invoice.jpg"></Image>
                                                    <TextBlock x:Uid="TextBlock_7" Margin="5" Text="{StaticResource VIEW_TICKET}">
                                            
                                                    </TextBlock>

                                                </StackPanel>
                                            </Button>

                                            <uc:DirectPrint x:Name="ucDirectPrint" Margin="0,0,5,0" />



                                        <Button x:Uid="btnPrintOpc" HorizontalAlignment="Left" Name="btnPrintOpc" MinHeight="30" 
                                            Margin="0,0,6,0" Click="btnPrintOpc_Click"    >  <!-- IsEnabled="{Binding Path=AnyReceived}" -->
                                            <StackPanel x:Uid="StackPanel_12" Orientation="Horizontal" >
                                                <Image x:Uid="Image_3" Margin="5,0,0,0"  Width="16" Source="/WpfFront;component/Images/label.jpg"></Image>
                                                <TextBlock x:Uid="TextBlock_8" Margin="5" Text="{StaticResource PRINT_LABELS}">
                                            
                                                </TextBlock>
                                            </StackPanel>
                                        </Button>

                                        <Button x:Uid="btnCrossDock" HorizontalAlignment="Left" Name="btnCrossDock" MinHeight="30" 
                                            Margin="0,0,6,0" Click="btnCrossDock_Click" >
                                                <StackPanel x:Uid="StackPanel_13" Orientation="Horizontal" >
                                                    <Image x:Uid="Image_4" Margin="5,0,0,0"  Width="18" Source="/WpfFront;component/Images/Icons/Cross.png"></Image>
                                                    <TextBlock x:Uid="TextBlock_9" Margin="5" Text="{StaticResource CROSS_DOCK}">
                                            
                                                    </TextBlock>

                                                </StackPanel>
                                            </Button>



                                    </WrapPanel>

                                        <Separator x:Uid="Separator_1" Margin="0,3,0,4" />

                                        <StackPanel x:Uid="StackPanel_14" Orientation="Horizontal" Margin="0,0,0,0" >

                                        <!--<Border Style="{DynamicResource UserControlFormInnerBorder}" DockPanel.Dock="Bottom" 
               Background="{DynamicResource WBg}"  Margin="0,0,9,0" >-->

                                        <GroupBox  Background="{DynamicResource WBg}" Header="{StaticResource RECEIPT_ACKNOWLEDGE}" Name="gAbArrive" Margin="0,-3,9,0" FontWeight="Bold" Visibility="Collapsed"  >
                                            <StackPanel Orientation="Vertical"   Margin="3">
                                                <!--<TextBlock x:Uid="TextBlock_10" FontWeight="Bold" Foreground="Brown">Receipt Acknowledge</TextBlock>-->

                                                <StackPanel Orientation="Horizontal">
                                                    <TextBlock Margin="0,0,5,0" VerticalAlignment="Center" Text="{StaticResource NR_OF_PACKS}" ></TextBlock>
                                                    <TextBox ToolTip="Quantity of Cases/Pallets Arrived."   Name="txtQtyArrived" LostFocus="txtQuantity_LostFocus"
                                                     Height="25"   Width="60" HorizontalAlignment="Left"  Text="{Binding Path=ReceivingQuantity, Mode=TwoWay, UpdateSourceTrigger=LostFocus, NotifyOnValidationError=True, ValidatesOnDataErrors=True, ValidatesOnExceptions=True, Converter={StaticResource forceReReadConverter}}" />



                                                </StackPanel>

                                                <Button x:Name="btnArrived"  
                                                         ToolTip="Use this option to notify when a PO arrives to the Warehouse. And print PO Labels."
                                                        FontWeight="Bold" Click="btnArrived_Click" Margin="0,5,0,0" Content="{StaticResource SEND}" ></Button>

                                            </StackPanel>
                                        </GroupBox>

                                        <!--</Border>-->

                                        <StackPanel>
                                            <TextBlock x:Uid="TextBlock_10" FontWeight="Bold" Text="{StaticResource NOTES_COMMENTS}"></TextBlock>
                                            <TextBox x:Uid="TextBox_1" TextWrapping="Wrap" Height="53" Width="285"   Text="{Binding Path=Document.Comment}" 
                                                     HorizontalAlignment="Left" AcceptsReturn="True" ToolTip="{Binding Path=Document.Comment}"></TextBox>
                                        </StackPanel>

                                        <StackPanel x:Uid="StackPanel_15" Orientation="Vertical" Margin="5,0,0,0" Width="93">

                                                <TextBlock x:Uid="TextBlock_11" VerticalAlignment="Center" FontWeight="Bold"  ToolTip="In Process: Partially Received, Completed: Full Received before send to ERP, Posted: Receipt Applied in ERP." Text="{StaticResource STATUS}"></TextBlock>

                                            
                                                <ComboBox x:Uid="cboStatus" Height="24" x:Name="cboStatus" ItemsSource="{Binding Path=DocStatus}" DisplayMemberPath="Name" Margin="0,0,0,0" SelectedValue="{Binding Path=Document.DocStatus.StatusID}" 
                                                  SelectedValuePath="StatusID" ToolTip="In Process: Partially Received, Completed: Full Received before send to ERP, Posted: Receipt Applied in ERP." />

                                                <Button x:Uid="btnChangeStatus" x:Name="btnChangeStatus" Height="24"  
                                                         ToolTip="In Process: Partially Received, Completed: Full Received before send to ERP, Posted: Receipt Applied in ERP."
                                                        FontWeight="Bold" Click="btnChangeStatus_Click" Margin="0,5,0,0" Content="{StaticResource UPDATE}"></Button>
                                            
                                        </StackPanel>
                                        </StackPanel>

                                    </StackPanel>


                                </StackPanel>
                                <StackPanel x:Uid="stkCross" Orientation="Horizontal" Name="stkCross" Visibility="Collapsed" >
                                    <TextBlock x:Uid="TextBlock_12" Margin="5,5,0,0" FontWeight="Bold" Text="{StaticResource VIEW_CR_DO_PRO_IN}" ></TextBlock>
                                    <TextBlock x:Uid="TextBlock_13" Margin="5,5,0,0" FontSize="12" FontWeight="Bold" Foreground="Brown" Text="{Binding Path=CrossDock.DocNumber}" MouseDown="TextBlock_MouseEnter"><TextBlock.TextDecorations><TextDecoration x:Uid="TextDecoration_2" PenOffset="1" /></TextBlock.TextDecorations></TextBlock>
                                </StackPanel>
                            </StackPanel>

                        </Border>





                        <odc:OdcExpander  x:Uid="expDocLines" Header="{StaticResource DOCUMENT_LINES}" Margin="5,0,8,0" Background="White" HorizontalAlignment="Stretch" 
                               IsMinimized="False"  IsExpanded="False"  ShowEllipse="False" x:Name="expDocLines" >

                            <Grid x:Uid="Grid_3">
                                <Grid.Resources>
                                    <Style x:Uid="Style_3" TargetType="{x:Type xcdg:DataRow}">
                                        <Style.Triggers>
                                            <DataTrigger x:Uid="DataTrigger_3" Binding="{Binding Path=LineStatus.Name}"  Value="Cancelled">
                                                <Setter x:Uid="Setter_5" Property="Background" Value="#FCA2A2"/>
                                            </DataTrigger>

                                            <DataTrigger x:Uid="DataTrigger_4" Binding="{Binding Path=LineStatus.Name}"  Value="Completed">
                                                <Setter x:Uid="Setter_6" Property="Background" Value="#FCFE70"/>
                                            </DataTrigger>

                                        <DataTrigger x:Uid="DataTrigger_5" Binding="{Binding Path=Note}" Value="1">
                                            <Setter x:Uid="Setter_7" Property="Background" Value="#FCFE70"/>
                                        </DataTrigger>


                                    </Style.Triggers>
                                    </Style>
                                </Grid.Resources>

                                <xcdg:DataGridControl  x:Uid="dgLines" Margin="-3,-3,-3,0" x:Name="dgLines"  ItemsSource="{Binding Path=DocumentLines}" 
                                HorizontalAlignment="Stretch" AutoCreateColumns="False" ReadOnly="True" MaxHeight="160">
                                    <xcdg:DataGridControl.Resources>
                                        <Style x:Uid="Style_4" x:Key="{x:Type xcdg:ScrollTip}" TargetType="{x:Type xcdg:ScrollTip}">
                                            <Setter x:Uid="Setter_8" Property="HorizontalAlignment" Value="Right" />
                                            <Setter x:Uid="Setter_9" Property="VerticalAlignment" Value="Bottom" />
                                        </Style>
                                    </xcdg:DataGridControl.Resources>
                                    <xcdg:DataGridControl.Columns>
                                        <!--<xcdg:Column FieldName="LineNumber" IsMainColumn="True" Title="Line" Width="50" />-->
                                        <xcdg:Column x:Uid="xcdg:Column_12" FieldName="LineStatus.Name" Title="{StaticResource STATUS}" Width="60" />
                                        <xcdg:Column x:Uid="xcdg:Column_13" FieldName="Product.ProductCode" Title="{StaticResource PRODUCT}"  Width="100"/>
                                        <xcdg:Column x:Uid="xcdg:Column_14" FieldName="Product.Description" Title="{StaticResource DESCRIPTION}" Width="200" TextWrapping="Wrap" />
                                        <xcdg:Column x:Uid="xcdg:Column_15" FieldName="Unit.Name" Title="{StaticResource UOM}" Width="60" />
                                        <xcdg:Column x:Uid="xcdg:Column_16" FieldName="Quantity" Title="{StaticResource ORDERED}" Width="60" />
                                    </xcdg:DataGridControl.Columns>
                                    <xcdg:DataGridControl.View>
                                        <xcdg:TableView x:Uid="xcdg:TableView_2" UseDefaultHeadersFooters="False" ShowScrollTip="False" VerticalGridLineBrush="Beige" ShowRowSelectorPane="False" ShowFixedColumnSplitter="False">
                                            <xcdg:TableView.Theme>
                                                <xcdg:Office2007BlackTheme x:Uid="xcdg:Office2007BlackTheme_2"/>
                                            </xcdg:TableView.Theme>
                                            <xcdg:TableView.FixedHeaders>
                                                <!--<DataTemplate x:Uid="DataTemplate_4">
                                                    <xcdg:HierarchicalGroupByControl x:Uid="xcdg:HierarchicalGroupByControl_2" xcdg:TableView.CanScrollHorizontally="False" />
                                                </DataTemplate>-->
                                                <DataTemplate x:Uid="DataTemplate_5">
                                                    <xcdg:ColumnManagerRow x:Uid="xcdg:ColumnManagerRow_2" />
                                                </DataTemplate>
                                            </xcdg:TableView.FixedHeaders>
                                        </xcdg:TableView>
                                    </xcdg:DataGridControl.View>
                                </xcdg:DataGridControl>
                            </Grid>



                        </odc:OdcExpander>

                        <!-- END CURRENT DOCUMENT LINE DETAILS  -->



                        <StackPanel x:Uid="stkPosting" Orientation="Vertical" x:Name="stkPosting" Margin="0,5,0,0">

                            <StackPanel x:Uid="StackPanel_16" Margin="5,0,8,0" Orientation="Horizontal">
                                <TextBlock  x:Uid="TextBlock_14" FontWeight="Bold" Text="{StaticResource PEN_CON_PUR_REC}" ></TextBlock>
                                <TextBlock x:Uid="TextBlock_15" Margin="30,0,0,0" Text="{StaticResource DOU_CLI_REC_REV}" ></TextBlock>
                            </StackPanel>


                            <xcdg:DataGridControl  x:Uid="dgPostingBalance" Margin="5,2,8,0" x:Name="dgPostingBalance"  ItemsSource="{Binding Path=PendingToPostList }" 
                                     HorizontalAlignment="Stretch" MaxHeight="110"   AutoCreateColumns="False" ReadOnly="True"  Grid.Column="0" Grid.Row="0" MouseDoubleClick="dgPostingBalance_MouseDoubleClick">
                                <xcdg:DataGridControl.Resources>
                                    <Style x:Uid="Style_5" x:Key="{x:Type xcdg:ScrollTip}" TargetType="{x:Type xcdg:ScrollTip}">
                                        <Setter x:Uid="Setter_10" Property="HorizontalAlignment" Value="Right" />
                                        <Setter x:Uid="Setter_11" Property="VerticalAlignment" Value="Bottom" />
                                    </Style>
                                </xcdg:DataGridControl.Resources>
                                <xcdg:DataGridControl.Columns>
                                    <!--<xcdg:Column FieldName="Node.Name" IsMainColumn="True" Title="Node" Width="60" />-->
                                    <xcdg:Column x:Uid="xcdg:Column_17" FieldName="Product.ProductCode" Title="{StaticResource PRODUCT}" Width="100" />
                                    <xcdg:Column x:Uid="xcdg:Column_18" FieldName="Product.Description" Title="{StaticResource DESCRIPTION}"  Width="180" TextWrapping="Wrap" />
                                    <xcdg:Column x:Uid="xcdg:Column_19" FieldName="Unit.Name" Title="{StaticResource UOM}" Width="60" />
                                    <xcdg:Column x:Uid="xcdg:Column_20" FieldName="Quantity" Title="{StaticResource RECEIVED}" Width="60" />
                                    <xcdg:Column x:Uid="xcdg:Column_21" FieldName="QtyPending" Title="{StaticResource PENDING_TO_POST}" Width="110" />
                                </xcdg:DataGridControl.Columns>
                                <xcdg:DataGridControl.View>
                                    <xcdg:TableView x:Uid="xcdg:TableView_3" UseDefaultHeadersFooters="False" ShowScrollTip="False" VerticalGridLineBrush="Beige" ShowRowSelectorPane="False" ShowFixedColumnSplitter="False">
                                        <xcdg:TableView.Theme>
                                            <xcdg:Office2007BlackTheme x:Uid="xcdg:Office2007BlackTheme_3"/>
                                        </xcdg:TableView.Theme>
                                        <xcdg:TableView.FixedHeaders>
                                            <!--<DataTemplate>
                                            <xcdg:HierarchicalGroupByControl xcdg:TableView.CanScrollHorizontally="False" />
                                        </DataTemplate>-->
                                            <DataTemplate x:Uid="DataTemplate_6">
                                                <xcdg:ColumnManagerRow x:Uid="xcdg:ColumnManagerRow_3" />
                                            </DataTemplate>
                                        </xcdg:TableView.FixedHeaders>
                                    </xcdg:TableView>
