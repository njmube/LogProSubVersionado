                                        <xcdg:Column x:Uid="xcdg:Column_31" FieldName="LineNumber" Title="{StaticResource LINE}"  Width="40"/>
                                        <xcdg:Column x:Uid="xcdg:Column_31" FieldName="Product.ProductCode" Title="{StaticResource PRODUCT}"  Width="110"/>
                                        <xcdg:Column x:Uid="xcdg:Column_32" FieldName="Product.Description" Title="{StaticResource DESCRIPTION}" Width="150" TextWrapping="Wrap" />
                                        <xcdg:Column x:Uid="xcdg:Column_33" FieldName="Unit.Name" Title="{StaticResource UOM}" Width="50" />
                                        <xcdg:Column x:Uid="xcdg:Column_34" FieldName="Sign" Title="" Width="15" />
                                        <xcdg:Column x:Uid="xcdg:Column_34" FieldName="Quantity" Title="{StaticResource QUANTITY}" Width="50" />
                                        <xcdg:Column x:Uid="xcdg:Column_35" FieldName="KitNote" Title="" Width="70" />
                                    </xcdg:DataGridControl.Columns>
                                    <xcdg:DataGridControl.View>
                                        <xcdg:TableView x:Uid="xcdg:TableView_5" UseDefaultHeadersFooters="False" ShowScrollTip="False" VerticalGridLineBrush="Beige" ShowRowSelectorPane="False" ShowFixedColumnSplitter="False">
                                            <xcdg:TableView.Theme>
                                                <xcdg:Office2007BlackTheme x:Uid="xcdg:Office2007BlackTheme_4"/>
                                            </xcdg:TableView.Theme>
                                            <xcdg:TableView.FixedHeaders>
                                                <!--<DataTemplate>
                                                        <xcdg:HierarchicalGroupByControl xcdg:TableView.CanScrollHorizontally="False" />
                                                    </DataTemplate>-->
                                                <DataTemplate x:Uid="DataTemplate_8">
                                                    <xcdg:ColumnManagerRow x:Uid="xcdg:ColumnManagerRow_5" />
                                                </DataTemplate>
                                            </xcdg:TableView.FixedHeaders>
                                        </xcdg:TableView>
                                    </xcdg:DataGridControl.View>
                                </xcdg:DataGridControl>

                                <TabControl Margin="0,8,0,0" SelectionChanged="TabControl_SelectionChanged" Name="tabPack" >
                                    <TabItem Header="{StaticResource PACKAGES}" Selector.IsSelected="True">
                                        <StackPanel Margin="3">
                                            <StackPanel x:Uid="StackPanel_31" Orientation="Horizontal" Margin="0,0,0,4">
                                                <TextBlock x:Uid="TextBlock_31" FontWeight="Bold" Text="{StaticResource PACKAGES_LIST}" ></TextBlock>
                                                <Image x:Uid="imgPackL" Margin="5,0,0,0" VerticalAlignment="Center" HorizontalAlignment="Right" Width="17" Name="imgPackL" 
                                       MouseDown="imgPackL_MouseDown" Source="/WpfFront;component/Images/refresh.png" ToolTip="Refresh Package List" />
                                            </StackPanel>

                                            <ListView  x:Uid="lvPacks" ItemsSource="{Binding Path=DocPackages}" MaxHeight="160" Name="lvPacks" >
                                                <ListView.View>
                                                    <GridView x:Uid="GridView_7">
                                                        <!--<GridViewColumn x:Uid="GridViewColumn_18" Header="{StaticResource SEQ}" DisplayMemberBinding="{Binding Path=Sequence}" Width="35"></GridViewColumn>-->
                                                        <GridViewColumn x:Uid="GridViewColumn_18" Header="{StaticResource TYPE}" DisplayMemberBinding="{Binding Path=PackageType}" Width="35"></GridViewColumn>
                                                        <GridViewColumn x:Uid="GridViewColumn_19" Header="{StaticResource BARCODE}" DisplayMemberBinding="{Binding Path=PackLabel.LabelCode}" Width="60"></GridViewColumn>

                                                        <GridViewColumn  x:Uid="GridViewColumn_20" Header="{StaticResource WEIGHT}" Width="68">
                                                            <GridViewColumn.CellTemplate>
                                                                <DataTemplate x:Uid="DataTemplate_9">
                                                                    <Grid x:Uid="Grid_8" HorizontalAlignment="Center">
                                                                        <TextBox x:Uid="TextBox_2" Width="55" Text="{Binding Path=Weight, Mode=TwoWay, UpdateSourceTrigger=LostFocus, NotifyOnValidationError=True, ValidatesOnDataErrors=True, ValidatesOnExceptions=True, Converter={StaticResource forceReReadConverter}}"/>
                                                                    </Grid>
                                                                </DataTemplate>
                                                            </GridViewColumn.CellTemplate>
                                                        </GridViewColumn>


                                                        <GridViewColumn x:Uid="GridViewColumn_21" Header="{StaticResource DIMENSION}" Width="75">
                                                            <GridViewColumn.CellTemplate>
                                                                <DataTemplate x:Uid="DataTemplate_10">
                                                                    <Grid x:Uid="Grid_9" HorizontalAlignment="Center">
                                                                        <TextBox x:Uid="TextBox_3" Width="63" Text="{Binding Path=Dimension, Mode=TwoWay, UpdateSourceTrigger=LostFocus, NotifyOnValidationError=True, ValidatesOnDataErrors=True, ValidatesOnExceptions=True, Converter={StaticResource forceReReadConverter}}"/>
                                                                    </Grid>
                                                                </DataTemplate>
                                                            </GridViewColumn.CellTemplate>
                                                        </GridViewColumn>


                                                        <GridViewColumn x:Uid="GridViewColumn_22" Header="{StaticResource PIECES}" Width="68">
                                                            <GridViewColumn.CellTemplate>
                                                                <DataTemplate x:Uid="DataTemplate_11" >
                                                                    <Grid x:Uid="Grid_10" HorizontalAlignment="Center">
                                                                        <TextBox x:Uid="TextBox_4" Width="55" Text="{Binding Path=Pieces, Mode=TwoWay, UpdateSourceTrigger=LostFocus, NotifyOnValidationError=True, ValidatesOnDataErrors=True, ValidatesOnExceptions=True, Converter={StaticResource forceReReadConverter}}"/>
                                                                    </Grid>
                                                                </DataTemplate>
                                                            </GridViewColumn.CellTemplate>
                                                        </GridViewColumn>


                                                        <!--<GridViewColumn Header="# Pieces" DisplayMemberBinding="{Binding Path=Pieces}" Width="50"></GridViewColumn>-->
                                                        <GridViewColumn x:Uid="GridViewColumn_23" Header="{StaticResource PICKER}" DisplayMemberBinding="{Binding Path=Picker.UserName}" Width="80"></GridViewColumn>
                                                        <GridViewColumn x:Uid="GridViewColumn_24" Header="{StaticResource PACK_DATE}" DisplayMemberBinding="{Binding Path=EndTime}" Width="100"></GridViewColumn>
                                                    </GridView>
                                                </ListView.View>
                                            </ListView>
                                            


                                            <TextBlock x:Uid="TextBlock_32" Margin="0,8,0,0" FontWeight="Bold" Foreground="Brown" Text="{StaticResource CHA_PACK_WEI_DIM_EDI_GRI}"></TextBlock>

                                            <StackPanel x:Uid="StackPanel_28" Margin="0,3,0,0" Orientation="Vertical" >

                                                <StackPanel Orientation="Horizontal" HorizontalAlignment="Left">

                                                    <Button x:Uid="updPack" Content="{StaticResource UPDATE_CHANGES}" Width="110" FontWeight="Bold" Height="30" Name="updPack" Click="updPack_Click" />

                                                    <Button x:Uid="prPreview" HorizontalAlignment="Left" Name="prPreview" MinHeight="30" 
                                            Margin="5,0,0,0" Click="prPrint_Click">
                                                        <StackPanel x:Uid="StackPanel_29" Orientation="Horizontal" >
                                                            <Image x:Uid="Image_3" Margin="5,0,0,0"  Width="16" Source="/WpfFront;component/Images/label.jpg"></Image>
                                                            <TextBlock x:Uid="TextBlock_33" Margin="5" Text="{StaticResource PRINT_LABELS}">
                                                            </TextBlock>
                                                        </StackPanel>
                                                    </Button>


                                                    <Button x:Uid="btnAdmPacks" HorizontalAlignment="Left" Name="btnAdmPacks" MinHeight="30" 
                                            Margin="5,0,0,0" Click="btnAdmPacks_Click">
                                                        <StackPanel x:Uid="StackPanel_30" Orientation="Horizontal" >
                                                            <Image x:Uid="Image_4" Margin="5,0,0,0"  Width="23" Source="/WpfFront;component/Images/openbox.png"></Image>
                                                            <TextBlock x:Uid="TextBlock_34" Margin="5" Text="{StaticResource REORDER_PACKAGES}" >
                                                            </TextBlock>
                                                        </StackPanel>
                                                    </Button>

                                                </StackPanel>


                                                <StackPanel Orientation="Horizontal" Margin="0,8,0,0">

                                                    <Button x:Uid="btnPS" HorizontalAlignment="Left" Name="btnPS" MinHeight="30" Width="118"
                                            Margin="0,0,0,0" Click="btnPS_Click">
                                                        <StackPanel x:Uid="StackPanel_32" Orientation="Horizontal">
                                                            <Image x:Uid="Image_5" Margin="2,0,0,0"  Width="18" Source="/WpfFront;component/Images/invoice.jpg"></Image>
                                                            <TextBlock x:Uid="TextBlock_35" Margin="5" Text="{StaticResource VIEW_PACKING_SLIP}">
                                                            </TextBlock>

                                                        </StackPanel>
                                                    </Button>

                                                    <uc:DirectPrint x:Name="ucDirectShip" Margin="5,0,0,0" Loaded="ucDirectShip_Loaded" />

                                                </StackPanel>


                                            </StackPanel>

                                        </StackPanel>
                                    </TabItem>
                                    
                                    <TabItem Header="{StaticResource SHIPMENT_DOCUMENTS}">
                                        <uc:ShowProcessFile x:Name="ucShowFiles" Margin="5" />                                                                                
                                    </TabItem>
                                    
                                </TabControl>
                                
                            </StackPanel>

                        </StackPanel>



                    </Grid>

                </TabItem>
                                              

            </TabControl>


            <!-- popup sales order details & packages -->
            <Popup x:Uid="popup1" Name="popup1" Width="Auto" Height="Auto" AllowsTransparency="True"                    
                   Placement="Center">
                <uc:PopUpShell x:Uid="ucRecBalance" x:Name="ucRecBalance" />
            </Popup>
            <!-- popup -->


            <!-- popup sales order details & packages V2 -->
            <Popup x:Uid="popup2" Name="popup2" Width="Auto" Height="Auto" AllowsTransparency="True"                    
                   Placement="Center">

                <Border  x:Uid="Border_1" Style="{DynamicResource UserControlFormInnerBorder}" DockPanel.Dock="Bottom" 
               Background="{DynamicResource WBg}"      
                 HorizontalAlignment="Stretch"  VerticalAlignment="Stretch" >

                    <StackPanel>
                        <uc:AdminPackagesV2 x:Name="ucAdminPkg" />

                        <Button HorizontalAlignment="Center" Click="Button_Click" Margin="5">Close</Button>
                    </StackPanel>

                </Border>
            </Popup>
            <!-- popup -->

            <Popup x:Uid="popup3" Name="popup3" Width="Auto" Height="Auto" AllowsTransparency="True"                    
                   Placement="Center">

                <uc:AdminDocumentLine x:Name="ucDocLine"  VerticalAlignment="Top" />

            </Popup>

        </DockPanel>
