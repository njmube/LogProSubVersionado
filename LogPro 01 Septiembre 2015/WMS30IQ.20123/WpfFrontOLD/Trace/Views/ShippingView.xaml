<WMCore:UserControlBase x:Uid="ShippingModule" x:Class="WpfFront.Views.ShippingView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:xcdg="http://schemas.xceed.com/wpf/xaml/datagrid"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:odc="http://schemas.odyssey.com/wpf"
    HorizontalAlignment="Stretch" Margin="0"
    VerticalAlignment="Stretch" Width="Auto" Height="Auto"
    xmlns:WMCore="clr-namespace:Core.WPF;assembly=Core"  
    xmlns:toolkit="http://schemas.microsoft.com/wpf/2008/toolkit"
    xmlns:uc="clr-namespace:WpfFront.Common.UserControls"
    x:Name="ShippingModule">
        
    <AdornerDecorator x:Uid="AdornerDecorator_1">
        <AdornerDecorator.Resources>
            <xcdg:DataGridCollectionViewSource x:Uid="xcdg:DataGridCollectionViewSource_1" x:Key="ListDoc" Source="{Binding DocumentList}" AutoFilterMode="And"  DefaultCalculateDistinctValues="True" />
        </AdornerDecorator.Resources>

        <DockPanel x:Uid="DockPanel_1" Background="{DynamicResource WBg}" HorizontalAlignment="Stretch" VerticalAlignment="Stretch">
            
            <DockPanel.Resources>
                <WMCore:ForceReReadConverter x:Uid="WMCore:ForceReReadConverter_1" x:Key="forceReReadConverter" />
                <WMCore:FormattingConverter x:Uid="WMCore:FormattingConverter_1" x:Key="formattingConverter" />
                <WMCore:FormNotificationErrorMessageConverter x:Uid="WMCore:FormNotificationErrorMessageConverter_1" x:Key="formNotificationErrorMessageConverter" />
                <WMCore:NullableIntegerFormatConverter x:Uid="WMCore:NullableIntegerFormatConverter_1" x:Key="nullableIntegerFormatConverter" />
            </DockPanel.Resources>
            
            

            <!-- COLUMN ONE -->
            
            <!-- PANEL DE LISTA DE DOCUMENTOS -->

            <DockPanel x:Uid="DockPanel_2" Margin="0,0,0,0"  VerticalAlignment="Stretch" DockPanel.Dock="Left" HorizontalAlignment="Stretch" Height="Auto">

                <StackPanel x:Uid="StackPanel_1" Orientation="Horizontal" HorizontalAlignment="Stretch" Margin="5,0,5,0" DockPanel.Dock="Top">
                    <TextBlock x:Uid="txtTitle" Name="txtTitle" Margin="4,3,4,2" Width="300" FontSize="14" FontWeight="Bold" HorizontalAlignment="Center" TextAlignment="Center" Text="{StaticResource SHIPPING_PROCESS}" ></TextBlock>
                    <TextBlock x:Uid="txtHide" Margin="6,0,0,0" Name="txtHide" FontWeight="Bold" VerticalAlignment="Center" HorizontalAlignment="Right" MouseDown="txtHide_MouseDown" Text="{StaticResource HIDE_LIST}" ><TextBlock.TextDecorations><TextDecoration x:Uid="TextDecoration_1" PenOffset="1" /></TextBlock.TextDecorations></TextBlock>
                </StackPanel>

                <DockPanel x:Uid="stpDocLis" Name="stpDocLis">

                    <GroupBox x:Uid="gp1" Header="{StaticResource CRE_EMP_TICK_CUS}" Margin="5,2,8,0" DockPanel.Dock="Bottom" Name="gp1" Visibility="Collapsed" >

                        <Grid x:Uid="Grid_1" Margin="3">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition x:Uid="ColumnDefinition_1"/>
                                <ColumnDefinition x:Uid="ColumnDefinition_2"/>
                            </Grid.ColumnDefinitions>

                            <StackPanel x:Uid="StackPanel_2" Grid.Column="0" Orientation="Vertical" HorizontalAlignment="Left">
                                <StackPanel x:Uid="StackPanel_3" Orientation="Vertical">
                                    <TextBlock x:Uid="TextBlock_1" Margin="0,4,5,0" Text="{StaticResource SEARCH_CUSTOMER}"></TextBlock>
                                    <uc:SearchAccount x:Uid="txtCustomer" AccType="1" HorizontalAlignment="Left" Margin="0,2,0,0" x:Name="txtCustomer" />
                                </StackPanel>

                            </StackPanel>

                            <Button x:Uid="btnEmptyTask" MinHeight="40" Width="130" VerticalAlignment="Bottom" Margin="5,0,0,0" Grid.Column="1"  ToolTip="Create a blanket pick ticket document."
                                       x:Name="btnEmptyTask"  Click="btnEmptyTask_Click" IsEnabled="true"  HorizontalAlignment="Left">
                                <TextBlock x:Uid="TextBlock_2" TextWrapping="Wrap" HorizontalAlignment="Center" TextAlignment="Center" FontWeight="Bold" Text="{StaticResource CREA_PICK_TICK_WIT_SO}"></TextBlock>
                            </Button>

                        </Grid>
                    </GroupBox>



                    <Border x:Uid="Border_1" Style="{DynamicResource UserControlFormInnerBorder}" 
                        HorizontalAlignment="Stretch"  VerticalAlignment="Stretch">

                        <DockPanel x:Uid="dpList" HorizontalAlignment="Stretch" VerticalAlignment="Top"  Name="dpList" Height="Auto">


                            <StackPanel x:Uid="StackPanel_4" Orientation="Horizontal" DockPanel.Dock="Top" >
                                <TextBlock x:Uid="TextBlock_3" VerticalAlignment="Center" Text="{StaticResource SEARCH_DOCUMENT}"></TextBlock>
                                <TextBox x:Uid="txtSearch" Width="100" x:Name="txtSearch" Margin="4,2,0,4" ToolTip="Enter keyword to search." TextChanged="txtSearch_TextChanged" />

                                <CheckBox x:Uid="chkLate" HorizontalAlignment="Stretch" x:Name="chkLate" Margin="40,9,0,4" Width="Auto"  VerticalContentAlignment="Top" Checked="chkLate_Checked" Unchecked="chkLate_Checked" Content="{StaticResource LATE_DOCUMENTS}"></CheckBox>

                                <CheckBox Visibility="Hidden"  HorizontalAlignment="Stretch" x:Name="chkMerged" Margin="20,9,0,4" Width="Auto"  VerticalContentAlignment="Top" Checked="chkMerged_Checked" Unchecked="chkMerged_Unchecked" IsChecked="True" Content="{StaticResource ONLY_MERGED}"></CheckBox>

                                <Image x:Uid="Image_1" Margin="20,0,0,0" Width="17" HorizontalAlignment="Center" Source="/WpfFront;component/Images/refresh.png" MouseDown="Image_MouseDown" ToolTip="Refresh List" />


                            </StackPanel>



                            <Grid  x:Uid="Grid_2" VerticalAlignment="Stretch" Height="Auto">

                                <xcdg:DataGridControl  x:Uid="dgDocument" x:Name="dgDocument"  Grid.Row="1" ItemsSource="{Binding Source={StaticResource ListDoc}}" 
                          AutoCreateColumns="False" Width="Auto" ReadOnly="False" IsTextSearchEnabled="True" 
                          Margin="0,0,0,0"  SelectionMode="Single" 
                                                  ItemScrollingBehavior="Immediate" VerticalAlignment="Top"
                                          NavigationBehavior="RowOnly" GotFocus="dgDocument_Click">

                                    <xcdg:DataGridControl.Resources>

                                        <Style x:Uid="Style_1" TargetType="{x:Type xcdg:DataRow}">
                                            <Style.Triggers>
                                                <DataTrigger x:Uid="DataTrigger_1" Binding="{Binding Path=DocStatus.Name}"  Value="Completed">
                                                    <Setter x:Uid="Setter_1" Property="Background" Value="#FCA2A2"/>
                                                </DataTrigger>

                                                <DataTrigger x:Uid="DataTrigger_2" Binding="{Binding Path=DocStatus.Name}"  Value="In Process">
                                                    <Setter x:Uid="Setter_2" Property="Background" Value="#FCFE70"/>
                                                </DataTrigger>

                                            </Style.Triggers>
                                        </Style>

                                        <Style x:Uid="Style_2" x:Key="{x:Type xcdg:ScrollTip}" TargetType="{x:Type xcdg:ScrollTip}">
                                            <Setter x:Uid="Setter_3" Property="HorizontalAlignment" Value="Right" />
                                            <Setter x:Uid="Setter_4" Property="VerticalAlignment" Value="Bottom" />
                                        </Style>
                                    </xcdg:DataGridControl.Resources>



                                    <xcdg:DataGridControl.ContextMenu>
                                        <ContextMenu x:Uid="ctnColsMenu" Name="ctnColsMenu">
                                            <MenuItem x:Uid="MenuItem_1" Header="Show/Hide Columns" Tag="CustomizeColumns" MouseEnter="MenuItem_MouseEnter"/>
                                        </ContextMenu>
                                    </xcdg:DataGridControl.ContextMenu>


                                    <xcdg:DataGridControl.Columns>
                                        <!--<xcdg:Column x:Uid="xcdg:Column_1" FieldName="Priority" Title="Prio" Width="25"/>-->
                                        <xcdg:Column x:Uid="xcdg:Column_2" FieldName="DocNumber" IsMainColumn="True" Title="{StaticResource DOCUMENT}" Width="80" />
                                        <xcdg:Column x:Uid="xcdg:Column_3" FieldName="Customer.Name" Title="{StaticResource CUSTOMER}"  Width="120" TextWrapping="Wrap" />
                                        <xcdg:Column x:Uid="xcdg:Column_4" FieldName="Date1" Title="{StaticResource ORDER_DATE}"  Width="65"/>
                                        <!--<xcdg:Column FieldName="CrossDocking" Title="Cross"  Width="35" />-->
                                        <xcdg:Column x:Uid="xcdg:Column_5" FieldName="DocStatus.Name" Title="{StaticResource STATUS}" Width="60" />
                                        <xcdg:Column x:Uid="xcdg:Column_6" FieldName="ShippingMethod.Name" Title="{StaticResource SHIP_MTHD}" Width="70"  />
                                        <xcdg:Column  x:Uid="xcdg:Column_36" FieldName="Notes" Title="{StaticResource NOTES}" Width="60"  ReadOnly="True" TextWrapping="Wrap" />
                                        
                                        <xcdg:Column x:Uid="xcdg:Column_7" FieldName="Date2" Title="Required On"  Width="65" Visible="False" />
                                        <xcdg:Column x:Uid="xcdg:Column_8" FieldName="Date3" Title="Shipped On" Width="65" Visible="False"  ReadOnly="True" />
                                        <xcdg:Column x:Uid="xcdg:Column_9" FieldName="DocType.Name" Title="Type" Width="60" Visible="False"  ReadOnly="True" />
                                        <xcdg:Column x:Uid="xcdg:Column_10" FieldName="Reference" Title="Reference" Width="60" Visible="False"  ReadOnly="True" />
                                        <xcdg:Column x:Uid="xcdg:Column_11" FieldName="CustPONumber" Title="Cust PO#" Width="60" Visible="False"  ReadOnly="True" />
                                        <xcdg:Column x:Uid="xcdg:Column_12" FieldName="Comment" Title="Comment" Width="70" Visible="False"  ReadOnly="True" TextWrapping="Wrap" />
                                        <xcdg:Column x:Uid="xcdg:Column_13" FieldName="AssignedUsers" Title="Pickers" Width="70" Visible="False"  TextWrapping="Wrap" ReadOnly="True" />




                                    </xcdg:DataGridControl.Columns>
                                    <xcdg:DataGridControl.View>
                                        <xcdg:TableView x:Uid="xcdg:TableView_1" UseDefaultHeadersFooters="False" ShowScrollTip="True" VerticalGridLineBrush="LightGray" ShowRowSelectorPane="False" HorizontalGridLineThickness="1" HorizontalGridLineBrush="LightGray">
                                            <xcdg:TableView.Theme>
                                                <xcdg:Office2007SilverTheme x:Uid="xcdg:Office2007SilverTheme_1"/>
                                            </xcdg:TableView.Theme>
                                            <xcdg:TableView.FixedHeaders>
                                                <DataTemplate x:Uid="DataTemplate_1">
                                                    <xcdg:HierarchicalGroupByControl x:Uid="xcdg:HierarchicalGroupByControl_1" xcdg:TableView.CanScrollHorizontally="False" />
                                                </DataTemplate>
                                                <DataTemplate x:Uid="DataTemplate_2">
                                                    <xcdg:ColumnManagerRow x:Uid="xcdg:ColumnManagerRow_6" AllowAutoFilter="True"  AllowColumnReorder="True" />
                                                </DataTemplate>
                                            </xcdg:TableView.FixedHeaders>
                                        </xcdg:TableView>
                                    </xcdg:DataGridControl.View>
                                </xcdg:DataGridControl>
                            </Grid>

                            <!--</Grid>-->
                            <!--</Border>-->
                            <!--<Border  HorizontalAlignment="Stretch"
                                Style="{DynamicResource UserControlFormInnerBorder}" >-->


                            <!--</Border>-->


                            <!--<StackPanel Visibility="Hidden" x:Name="pgrBar" DockPanel.Dock="Bottom" Orientation="Horizontal" HorizontalAlignment="Right" VerticalAlignment="Bottom">
                    <TextBlock Name="StatusText" Margin="10,0,5,0"  VerticalAlignment="Center">Processing</TextBlock> 
                    <ProgressBar Name="Progress" IsIndeterminate="True" Width="100" Height="15" Minimum="0" Maximum="1" Margin="5" />                    
                    </StackPanel>-->

                        </DockPanel>

                    </Border>
                </DockPanel>

                <!-- END PANEL DE LISTA DE DOCUMENTOS -->
         </DockPanel>



            <TabControl x:Uid="tabMenu" Margin="2,5,5,0" Name="tabMenu" DockPanel.Dock="Top" TabStripPlacement="Top" 
                        Style="{DynamicResource TabControlStyle1}" Visibility="Hidden" HorizontalAlignment="Stretch"
                        VerticalAlignment="Stretch" SelectionChanged="tabMenu_SelectionChanged">

                <TabItem x:Uid="TabItem_1" Header="{StaticResource DOC_DET_SHIP_CREA}" >

                    <StackPanel x:Uid="StackPanel_5" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Margin="3">
                                              

                            <Border  x:Uid="Border_2" Style="{DynamicResource UserControlFormInnerBorder}" DockPanel.Dock="Bottom" 
                    HorizontalAlignment="Stretch"  VerticalAlignment="Stretch">
                            <StackPanel x:Uid="StackPanel_6" Orientation="Horizontal">
                                <StackPanel x:Uid="StackPanel_7" Orientation="Vertical">


                                    <StackPanel x:Uid="StackPanel_8" Orientation="Horizontal">
                                        <TextBlock x:Uid="TextBlock_4" FontWeight="Bold" Text="{StaticResource CURRENT_DOCUMENT}" ></TextBlock>

                                        <TextBlock x:Uid="TextBlock_5" FontWeight="Bold" Margin="5,0,0,0" Text="{Binding Path=Document.DocNumber}" Foreground="Brown"></TextBlock>
                                    </StackPanel>


                                    <ListView x:Uid="lvDocumentData" ItemsSource="{Binding Path=DocumentData}"  Name="lvDocumentData" MaxHeight="120" >
                                        <ListView.View>
                                            <GridView x:Uid="GridView_1" ColumnHeaderContainerStyle="{DynamicResource CustomHeaderStyle}">
                                                <GridViewColumn x:Uid="GridViewColumn_1" Header="{StaticResource KEY}" DisplayMemberBinding="{Binding Path=DataKey}"></GridViewColumn>
                                                
                                                <GridViewColumn x:Uid="GridViewColumn_2" Header="{StaticResource VALUE}">

                                                    <GridViewColumn.CellTemplate>
                                                        <DataTemplate x:Uid="DataTemplate_3X">
                                                            <TextBlock x:Uid="TextBlock_5X" Text="{Binding Path=DataValue}" TextWrapping="Wrap" Width="130" />
                                                        </DataTemplate>
                                                    </GridViewColumn.CellTemplate>

                                                </GridViewColumn>



                                            </GridView>
                                        </ListView.View>
                                    </ListView>
                                </StackPanel>

                                <StackPanel x:Uid="StackPanel_9" Margin="15,0,0,0">

                                    <WrapPanel  x:Uid="WrapPanel_1" Width="380">
                                        
                                        <Image x:Uid="Image_1" Margin="0,0,4,0" Width="20" HorizontalAlignment="Center" 
                                               Source="/WpfFront;component/Images/Icons/Cross.png" Name="xRefresh"
                                               MouseDown="xRefresh_MouseDown" ToolTip="Refresh Document" />
                                        
                                    <Button x:Uid="btnPktTkt" HorizontalAlignment="Left" Name="btnPktTkt" MinHeight="30" Width="100" 
                                            Margin="0,0,0,0" Click="btnPktTkt_Click">
                                        <StackPanel x:Uid="StackPanel_10" Orientation="Horizontal">
                                            <Image x:Uid="Image_2" Margin="5,0,0,0"  Width="18" Source="/WpfFront;component/Images/invoice.jpg"></Image>
                                            <TextBlock x:Uid="TextBlock_6" Margin="5" Text="{StaticResource PICK_TICKET}" >
                                            </TextBlock>
                                        </StackPanel>
                                    </Button>

                                   <uc:DirectPrint x:Name="ucDirectPrint" />



                                    </WrapPanel>
                                    
                                    <Separator x:Uid="Separator_1" />


                                    <StackPanel x:Uid="StackPanel_11" Orientation="Vertical">

                                        <TextBlock x:Uid="TextBlock_7" FontWeight="Bold" Text="{StaticResource NOTES_COMMENTS}" ></TextBlock>
                                        <TextBox x:Uid="TextBox_1"  TextWrapping="Wrap" Height="40" Text="{Binding Path=Document.Comment}" HorizontalAlignment="Left" 
                                         Width="345"></TextBox>

                                        <Grid x:Uid="Grid_3" Margin="0,5,0,0">
                                            <Grid.RowDefinitions>
                                                <RowDefinition x:Uid="RowDefinition_1" Height="auto" />
                                                <RowDefinition x:Uid="RowDefinition_2" Height="auto" />
                                            </Grid.RowDefinitions>
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition x:Uid="ColumnDefinition_3" Width="Auto" />
                                                <ColumnDefinition x:Uid="ColumnDefinition_4" Width="Auto" />
                                                <ColumnDefinition x:Uid="ColumnDefinition_5" Width="Auto" />
                                            </Grid.ColumnDefinitions>


                                            <TextBlock x:Uid="TextBlock_8" Grid.Column="0" Grid.Row="0" Margin="5,0,0,0" VerticalAlignment="Center" FontWeight="Bold" Text="{StaticResource STATUS}"></TextBlock>

                                            <ComboBox x:Uid="cboStatus" Grid.Column="0"  Grid.Row="1" x:Name="cboStatus" ItemsSource="{Binding Path=DocStatus}" DisplayMemberPath="Name" Margin="5,0,0,0"
                                                  SelectedValuePath="StatusID"  SelectedValue="{Binding Path=Document.DocStatus.StatusID}" Width="80" ToolTip="In Process: Partially Picked, Completed: Full Picked before send to ERP, Posted: Confirmed in ERP." />


                                            <TextBlock x:Uid="TextBlock_9" Grid.Column="1" Grid.Row="0" Margin="8,0,0,0"  VerticalAlignment="Center" FontWeight="Bold" Text="{StaticResource PICKING_METHOD}" ></TextBlock>

                                            <ComboBox x:Uid="cboPickM" Grid.Column="1" Grid.Row="1" x:Name="cboPickM"  ItemsSource="{Binding Path=PickMethods}" 
                                                              DisplayMemberPath="Name" Margin="8,0,0,0"
                                                              SelectedValuePath="MethodID" Width="100" SelectedValue="{Binding Path=Document.PickMethod.MethodID}" />

                                            <Button x:Uid="btnChangeStatus" Grid.Column="2" Grid.RowSpan="2" Width="30" VerticalAlignment="Bottom"  x:Name="btnChangeStatus"  FontWeight="Bold" Click="btnChangeStatus_Click" Margin="8,0,0,0" Content="{StaticResource UPDATE}"></Button>
                                        </Grid>

                                        <!--
                                        <StackPanel Orientation="Horizontal" Margin="0,5,0,0">

                                            <StackPanel Orientation="Horizontal">
                                                <TextBlock VerticalAlignment="Center" FontWeight="Bold">Status</TextBlock>
                                                <ComboBox x:Name="cboStatus" ItemsSource="{Binding Path=DocStatus}" DisplayMemberPath="Name" Margin="5,0,0,0"
                                                  SelectedValuePath="StatusID" Width="80" />
                                            </StackPanel>

                                            <Button x:Name="btnChangeStatus"  FontWeight="Bold" Click="btnChangeStatus_Click" Margin="5,0,0,0">Update!</Button>
                                        </StackPanel>
                                        -->

                                    </StackPanel>
                                </StackPanel>



                            </StackPanel>
                        </Border>


                        <TextBlock Margin="5,0,8,4" Name="txtWarning" FontSize="12" FontWeight="Bold" Foreground="Brown"
                                   Background="Yellow" />
                                                    
                        

                        <odc:OdcExpander  x:Uid="expDocLines" Header="{StaticResource DOCUMENT_LINES}" Margin="5,0,8,0" Background="White"  
                               IsMinimized="False"  IsExpanded="False"  ShowEllipse="False" x:Name="expDocLines" MouseDoubleClick="expDocLines_MouseDoubleClick" >



                            <Grid x:Uid="Grid_4">
                                
                                <Grid.Resources>
                                    <Style x:Uid="Style_3" TargetType="{x:Type xcdg:DataRow}">
                                        <Style.Triggers>
                                            <DataTrigger x:Uid="DataTrigger_3" Binding="{Binding Path=LineStatus.Name}"  Value="Cancelled">
                                                <Setter x:Uid="Setter_5" Property="Background" Value="#FCA2A2"/>
                                            </DataTrigger>

                                            <DataTrigger x:Uid="DataTrigger_4" Binding="{Binding Path=Note}" Value="2">
                                                <Setter x:Uid="Setter_6" Property="Background" Value="#FCFE70"/>
                                            </DataTrigger>

                                        </Style.Triggers>
                                    </Style>
                                </Grid.Resources>


                                <StackPanel Orientation="Vertical">
                                    
                                    <xcdg:DataGridControl  x:Uid="dgLines" Margin="-3,-3,-3,0" x:Name="dgLines"  ItemsSource="{Binding Path=DocumentLines}" 
                                        HorizontalAlignment="Stretch" AutoCreateColumns="False" ReadOnly="True" MaxHeight="180" VerticalAlignment="Top">
                                        <xcdg:DataGridControl.Resources>
                                            <Style x:Uid="Style_4" x:Key="{x:Type xcdg:ScrollTip}" TargetType="{x:Type xcdg:ScrollTip}">
                                                <Setter x:Uid="Setter_7" Property="HorizontalAlignment" Value="Right" />
                                                <Setter x:Uid="Setter_8" Property="VerticalAlignment" Value="Bottom" />
                                            </Style>
                                        </xcdg:DataGridControl.Resources>


                                        <!--<xcdg:DataGridControl.ContextMenu>
                                            <ContextMenu Name="ctnLine" >
                                                <MenuItem Header="Line Options" Tag="LineOps" MouseEnter="MenuItem_MouseEnter_1"/>
                                            </ContextMenu>
                                        </xcdg:DataGridControl.ContextMenu>-->


                                        <xcdg:DataGridControl.Columns>
                                            <!--<xcdg:Column FieldName="LineNumber" IsMainColumn="True" Title="Line" Width="50" />-->
                                            <xcdg:Column x:Uid="xcdg:Column_14" FieldName="LineStatus.Name" Title="Status" Width="50" />
                                            <xcdg:Column x:Uid="xcdg:Column_15" FieldName="Product.ProductCode" Title="Product"  Width="110"/>
                                            <xcdg:Column x:Uid="xcdg:Column_16" FieldName="Product.Description" Title="Description" Width="200" TextWrapping="Wrap" />
                                            <xcdg:Column x:Uid="xcdg:Column_17" FieldName="Unit.Name" Title="UoM" Width="50" />
                                            <xcdg:Column x:Uid="xcdg:Column_18" FieldName="Quantity" Title="Ordered" Width="50" />
                                            <xcdg:Column x:Uid="xcdg:Column_19" FieldName="KitNote" Title="" Width="70" />
                                        </xcdg:DataGridControl.Columns>
                                        <xcdg:DataGridControl.View>
                                            <xcdg:TableView x:Uid="xcdg:TableView_2" UseDefaultHeadersFooters="False" ShowScrollTip="False" VerticalGridLineBrush="Beige" ShowRowSelectorPane="False" ShowFixedColumnSplitter="False">
                                                <xcdg:TableView.Theme>
                                                    <xcdg:Office2007BlackTheme x:Uid="xcdg:Office2007BlackTheme_1"/>
                                                </xcdg:TableView.Theme>
                                                <xcdg:TableView.FixedHeaders>
                                                    <!--<DataTemplate x:Uid="DataTemplate_3">
                                                    <xcdg:HierarchicalGroupByControl x:Uid="xcdg:HierarchicalGroupByControl_2" xcdg:TableView.CanScrollHorizontally="False" />
                                                </DataTemplate>-->
                                                    <DataTemplate x:Uid="DataTemplate_4">
                                                        <xcdg:ColumnManagerRow x:Uid="xcdg:ColumnManagerRow_2" />
                                                    </DataTemplate>
                                                </xcdg:TableView.FixedHeaders>
                                            </xcdg:TableView>
                                        </xcdg:DataGridControl.View>
                                    </xcdg:DataGridControl>
                                    
                                    <StackPanel Margin="-3,6,-3,0" Orientation="Horizontal" HorizontalAlignment="Left" Name="stkUpdLines" >
                                        <Button FontWeight="Bold" Width="100" Name="btnAdd" Click="btnAdd_Click">Add New Line</Button>
                                        <Button Margin="10,0,0,0" Width="130" Name="btnRemove" Click="btnRemove_Click" >Remove Selected Line</Button>
                                    </StackPanel>
                                    
                                    
                                    
                                </StackPanel>


                            </Grid>

                        </odc:OdcExpander>
                        <!-- END CURRENT DOCUMENT LINE DETAILS  -->


                        
                        <StackPanel x:Uid="stkPosting" Orientation="Vertical" x:Name="stkPosting" Margin="0,5,0,5">
                            

                            <StackPanel x:Uid="StackPanel_12" Margin="5,0,8,0" Orientation="Horizontal">
                                <TextBlock  x:Uid="TextBlock_10" FontWeight="Bold" Text="{StaticResource PEN_CON_SHIP_DOC}" ></TextBlock>
                                <TextBlock x:Uid="TextBlock_11" Margin="30,0,0,0" Text="{StaticResource DOU_CLI_REC_REV}" ></TextBlock>
                            </StackPanel>


                            <xcdg:DataGridControl  x:Uid="dgPostingBalance" Margin="5,2,8,0" x:Name="dgPostingBalance"  ItemsSource="{Binding Path=PendingToPostList }" MouseDoubleClick="dgPostingBalance_MouseDoubleClick"
                                     HorizontalAlignment="Stretch" MaxHeight="150"   AutoCreateColumns="False" ReadOnly="True"  Grid.Column="0" Grid.Row="0">
                                <xcdg:DataGridControl.Resources>
                                    <Style x:Uid="Style_5" x:Key="{x:Type xcdg:ScrollTip}" TargetType="{x:Type xcdg:ScrollTip}">
                                        <Setter x:Uid="Setter_9" Property="HorizontalAlignment" Value="Right" />
                                        <Setter x:Uid="Setter_10" Property="VerticalAlignment" Value="Bottom" />
                                    </Style>
                                </xcdg:DataGridControl.Resources>
                                <xcdg:DataGridControl.Columns>
                                    <!--<xcdg:Column FieldName="Node.Name" IsMainColumn="True" Title="Node" Width="60" />-->
                                    <xcdg:Column x:Uid="xcdg:Column_20" FieldName="Product.ProductCode" Title="{StaticResource PRODUCT}" Width="100" />
                                    <xcdg:Column x:Uid="xcdg:Column_21" FieldName="Product.Description" Title="{StaticResource DESCRIPTION}"  Width="180" TextWrapping="Wrap" />
                                    <xcdg:Column x:Uid="xcdg:Column_22" FieldName="Unit.Name" Title="{StaticResource UOM}" Width="60" />
                                    <xcdg:Column x:Uid="xcdg:Column_23" FieldName="Quantity" Title="{StaticResource PICKED}" Width="60" />
                                    <xcdg:Column x:Uid="xcdg:Column_24" FieldName="QtyPending" Title="{StaticResource PENDING_SHIPMENT}" Width="110" />
                                </xcdg:DataGridControl.Columns>
                                <xcdg:DataGridControl.View>
                                    <xcdg:TableView x:Uid="xcdg:TableView_3" UseDefaultHeadersFooters="False" ShowScrollTip="False" VerticalGridLineBrush="Beige" ShowRowSelectorPane="False" ShowFixedColumnSplitter="False">
                                        <xcdg:TableView.Theme>
                                            <xcdg:Office2007BlackTheme x:Uid="xcdg:Office2007BlackTheme_2"/>
                                        </xcdg:TableView.Theme>
                                        <xcdg:TableView.FixedHeaders>
                                            <!--<DataTemplate>
                                            <xcdg:HierarchicalGroupByControl xcdg:TableView.CanScrollHorizontally="False" />
                                        </DataTemplate>-->
                                            <DataTemplate x:Uid="DataTemplate_5">
                                                <xcdg:ColumnManagerRow x:Uid="xcdg:ColumnManagerRow_3" />
