<UserControl x:Uid="UserControl_1" x:Class="WpfFront.Common.WFUserControls.WFLabel"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Grid x:Uid="Grid_1">
        <StackPanel x:Uid="StackPanel_1" Orientation="Horizontal" Margin="4,3,4,3">
            <TextBlock x:Uid="TextBlock_1" HorizontalAlignment="Left" TextAlignment="Left" Margin="0,0,6,0" VerticalAlignment="Center" Text="{Binding Path=UcLabel}" Width="100" TextWrapping="Wrap" />
            <TextBlock x:Uid="TextBlock_2" Foreground="Brown" FontWeight="Bold" Text="{Binding Path=UcValue}" VerticalAlignment="Center" Width="180" />
        </StackPanel>
    </Grid>
</UserControl>
