<UserControl x:Uid="UserControl_1" x:Class="WpfFront.Common.WFUserControls.WFCheckBox"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Grid x:Uid="Grid_1">
        <StackPanel x:Uid="StackPanel_1" Orientation="Horizontal" Height="25" Margin="4,3,4,3" >     
            <TextBlock x:Uid="TextBlock_1" HorizontalAlignment="Left" Margin="0,0,6,0" VerticalAlignment="Center" Width="100" TextAlignment="Left" />            
            <CheckBox x:Uid="CheckBox_1" Width="180" Height="23" IsChecked="{Binding Path=UcValue}" Content="{Binding Path=UcLabel}" VerticalAlignment="Center" />
        </StackPanel>
    </Grid>
</UserControl>
