<UserControl x:Uid="UserControl_1" x:Class="WpfFront.Common.WFUserControls.WFNumericText"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Grid x:Uid="Grid_1">
        <StackPanel x:Uid="StackPanel_1" Orientation="Horizontal" Margin="4,3,4,3">
            <TextBlock x:Uid="TextBlock_1" HorizontalAlignment="Left"  TextAlignment="Left" Margin="0,0,6,0" VerticalAlignment="Center" Text="{Binding Path=UcLabel}" Width="100" TextWrapping="Wrap" />
            <TextBox x:Uid="TextBox_1" Width="180" Text="{Binding Path=UcValue}" Height="23" />
        </StackPanel>
    </Grid>
</UserControl>
