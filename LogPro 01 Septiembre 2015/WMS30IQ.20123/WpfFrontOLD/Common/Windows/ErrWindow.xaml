<Window
	x:Uid="Window_1" x:Class="WpfFront.Common.ErrWindow"
	xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	xmlns:aw="clr-namespace:Assergs.Windows;assembly=Assergs.Windows"
    ResizeMode="NoResize"
    Topmost="True"
    Icon="/WpfFront;component/Images/Icons/Exit16.png"
    WindowStartupLocation="CenterScreen" Height="200" Width="350">


    <Window.Background>
        <LinearGradientBrush x:Uid="LinearGradientBrush_1" EndPoint="1,1" StartPoint="0,0">
            <GradientStop x:Uid="GradientStop_1" Color="LightSalmon" Offset="0"/>
            <GradientStop x:Uid="GradientStop_2" Color="White" Offset="1"/>
        </LinearGradientBrush>
    </Window.Background>

    <StackPanel x:Uid="StackPanel_1">

		<TextBlock x:Uid="txtMesage" FontSize="12" Name="txtMesage" Margin="20"
			HorizontalAlignment="Center" VerticalAlignment="Center" TextWrapping="Wrap"></TextBlock>

		<Button x:Uid="btn1" Name="btn1" Grid.Row="1" Width="75" FontSize="12"
			HorizontalAlignment="Center" Margin="10" VerticalAlignment="Center" Click="btn1_Click_1">Ok</Button>

	</StackPanel>

</Window>
